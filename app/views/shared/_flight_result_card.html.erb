<div class="flight-cards-container">
  <div class="flight-card">
    <div class="flight-details">
      <div class='flight-block-container'>
        <div class="flight-icon">✈️ </div>
        <div class="flight-block">
          <span class="airline-name"> <%= flight[:airline_name] %></span>
          <span class="flight-number"> <%= flight[:flight_number] %></span>
        </div>
      </div>

      <div class="departure-block">
        <span class="time">🛫 <%= flight[:departure_time] %></span>
        <span class="city"><%= flight[:source] %></span>
      </div>

      <div class="route-arrow">➡️</div>

    <div class="arrival-block">
      <div class="time-container">
        <span class="time">🛬 <%= flight[:arrival_time] %></span>
        <% if flight[:arrival_date_difference].present? %>
          <span class="date-diff"><%= flight[:arrival_date_difference] %></span>
        <% end %>
      </div>
      <span class="city"><%= flight[:destination] %></span>
    </div>

      <div class="seats-block">
        <span class="time">Seats Available</span>
        <span class="city"><%= flight[:seats] %></span>
      </div>
      <div class="flight-price">
        <span class="price-label">Price</span>
        <span class="price-value">₹ <%= number_with_delimiter(flight[:price]) %></span>
    </div>
    <% unless local_assigns[:hide_book_button] %>
      <div class="book-button-container">
        <%= link_to 'Book', book_flight_path(flight: flight), class: 'book-button' %>
      </div>
    <% end %>
    </div>
  </div>
</div>